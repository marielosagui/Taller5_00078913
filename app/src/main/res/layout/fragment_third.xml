<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#69B22A"
              android:weightSum="5"
              tools:context=".first_frag" android:id="@+id/fon22">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"

                  android:layout_margin="30dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_height="match_parent" android:id="@+id/b">


        <TextView
                android:text="Tercer Fragmento"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:layout_weight="1"
                android:id="@+id/fon" android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <ImageView
                android:src="@drawable/ic_queue_play_next_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
        />


        <TextView
                android:layout_width="match_parent"
                android:text="Siguiente"
                android:gravity="center"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:id="@+id/fon2" android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />


        <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ic_arrow_forward_black_24dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:id="@+id/btn_third"
        />


    </LinearLayout>


</LinearLayout>